# TUI Application Definitions
# This file defines which TUI apps should be installable from this repo
#
# After editing, run: python scripts/generate-installer.py
# This creates install.sh that users can run to install your apps

apps:
  # Example: Single TUI app
  - name: my-tui-app
    description: My awesome TUI application
    entry_point: my_app.main:run
    # entry_point can be:
    #   - "module.path:function" → Calls function() when app runs
    #   - "module.path" → Runs as `python -m module.path`

  # Example: Multiple apps in one repo
  # - name: tui-tool-1
  #   description: First TUI tool
  #   entry_point: tools.tool1:main
  #
  # - name: tui-tool-2
  #   description: Second TUI tool
  #   entry_point: tools.tool2:run

